{
  "name": "nodejs-pure",
  "version": "13.0.0",
  "description": "Pure NodeJS application runtime",
  "license": "MIT",
  "private": true,
  "prisma": {
    "schema": "application/db/schema.prisma"
  },
  "main": "main.js",
  "scripts": {
    "test": "npm run lint && tsc",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.ts\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.ts\"",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "prisma migrate reset && prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "engines": {
    "node": "16 || 18 || 19 || 20"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "jsonwebtoken": "^9.0.2",
    "metasql": "^3.0.0-alpha.2",
    "metautil": "^3.7.2",
    "metawatch": "^1.2.2",
    "multiparty": "^4.2.3",
    "nodemailer": "^6.9.14",
    "pg": "^8.8.0",
    "redis": "^3.0.2",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/ws": "^8.5.4",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.2",
    "prisma": "^6.5.0",
    "typescript": "^5.0.4"
  }
}
